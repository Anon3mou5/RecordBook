<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <item>
        <shape>
            <gradient
                android:endColor="#0575E6"
                android:startColor="#00F260"
                android:angle="315"
                android:type="linear"
                />
            <corners
                android:radius="170dp"
                ></corners>

        </shape>
    </item>
    <item android:gravity="center"
        android:left="80dp"
        android:right="80dp"
        android:top="80dp"
        android:bottom="80dp">

        <bitmap android:src="@mipmap/plus"
            android:tint="#FFFFFF"/>
    </item>
</layer-list>
